Post
{
    _id: String,
    title: String,
    body: String (html for styling... maybe),
    comments: [Comment],
    userId: String,
    timestamp: Datetime
}

Comment
{
    _id: String,
    title: String,
    body: String,
    userId: String,
    timestamp: Datetime
}

User
{
    _id: String,
    firstName: String,
    lastName: String,
    email: String,
    writer: Boolean,
    password: String (hashed)
}
